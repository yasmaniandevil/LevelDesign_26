                      }
                    ]
                  }
                },
                {
                  "id": "googleDriveShortcut",
                  "type": "checkbox",
                  "title": "Google Drive",
                  "titleKey": "surfaceNameGdrive",
                  "storageKey": "acrobat-touch-point-in-gdrive",
                  "defaultValue": true,
                  "requiresReload": true,
                  "saveCallback": {
                    "function": "onAcrobatShortcutPreferenceChange",
                    "args": [
                      "gdrive",
                      "https://drive.google.com/*"
                    ]
                  },
                  "disabledCondition": {
                    "type": "custom",
                    "function": "isGoogleDriveShortcutDisabled"
                  },
                  "visibilityCondition": {
                    "type": "and",
                    "conditions": [
                      {
                        "flag": "dc-cv-gdrive-open-in-extension",
                        "value": true
                      }
                    ]
                  }
                },
                {
                  "id": "linkedinShortcut",
                  "type": "checkbox",
                  "title": "LinkedIn",
                  "titleKey": "preferenceLinkedInTitle",
                  "storageKey": "acrobat-touch-point-in-linkedin",
                  "defaultValue": true,
                  "requiresReload": true,
                  "saveCallback": {
                    "function": "onAcrobatShortcutPreferenceChange",
                    "args": [
                      "linkedin",
                      "https://www.linkedin.com/*"
                    ]
                  },
                  "visibilityCondition": {
                    "type": "or",
                    "conditions": [
                      {
                        "flag": "dc-cv-linkedin-pdf-touch-point",
                        "value": true
