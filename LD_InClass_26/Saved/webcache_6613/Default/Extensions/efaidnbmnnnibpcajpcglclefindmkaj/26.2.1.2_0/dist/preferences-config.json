                  "disabledCondition": {
                    "type": "custom",
                    "function": "isGmailShortcutDisabled"
                  },
                  "visibilityCondition": {
                    "type": "and",
                    "conditions": [
                      {
                        "flag": "dc-cv-gmail-acrobat-touch-point",
                        "value": true
                      }
                    ]
                  }
                },
